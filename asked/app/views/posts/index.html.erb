<div class="row">
  <div class="col-md-4 offset-md-5" >
    <h1>무엇이든 물어보세요</h1>
  </div>
  <div class="col-md-4 offset-md-10">
    <form action="/posts/new" >
        <input value="게시글 쓰기"  class="btn btn-outline-primary" type="submit"/><p/>
    </form>
  </div>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">번호</th>
      <th scope="col">작성자</th>
      <th scope="col">제목</th>
      <th scope="col">내용</th>
      <th scope="col">생성날짜</th>
      <th scope="col">수정날짜</th>
      <th scope="col">게시글 보기</th>
      <th scope="col">게시글 삭제</th>
    </tr>
  </thead>
  <tbody>
  <% @posts.each do |p| %>
  <tr>
    <th scope="row"><%= p.id %></th>
    <td><%= p.user.username %></td>
    <td><%= p.title %></td>
    <td><%= p.content %></td>
    <td><%= p.created_at %></td>
    <td><%= p.updated_at %></td>
    <td>
      <form action="/posts/<%= p.id %>" >
          <input value="게시글 보기"  class="btn btn-outline-primary" type="submit"/>
      </form>
    </td>
    <td>
      <a class="btn btn-outline-primary" role="button" href="/posts/<%= p.id%>" data-method="delete" data-confirm="are you sure?">게시글 삭제</a>
    </td>
  </tr>
  <% end %>
  </tbody
</table>
